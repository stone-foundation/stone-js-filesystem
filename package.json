{
  "name": "@stone-js/filesystem",
  "version": "0.1.0",
  "description": "Stone.js Filesystem",
  "author": "Mr. Stone <evensstone@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/stonemjs/filesystem.git"
  },
  "homepage": "https://stonejs.com",
  "bugs": {
    "url": "https://github.com/stonemjs/filesystem/issues"
  },
  "keywords": [
    "fs",
    "files",
    "Stone.js",
    "filesystem"
  ],
  "files": [
    "/dist"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "lint": "ts-standard src",
    "lint:fix": "ts-standard --fix src tests",
    "predoc": "rimraf docs",
    "doc": "typedoc",
    "prebuild": "rimraf dist && npm run doc",
    "build": "rollup -c",
    "test": "vitest run",
    "test:cvg": "npm run test -- --coverage",
    "test:text": "npm run test:cvg -- --coverage.reporter=text",
    "test:html": "npm run test:cvg -- --coverage.reporter=html",
    "test:clover": "npm run test:cvg -- --coverage.reporter=clover",
    "prepare": "husky"
  },
  "peerDependencies": {
    "@stone-js/core": "^0.1.0"
  },
  "dependencies": {
    "filesize": "^10.1.6",
    "mime": "^4.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "^3.2.0",
    "husky": "^9.1.7",
    "rimraf": "^6.0.1",
    "rollup": "^4.41.1",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "ts-standard": "^12.0.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.6.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "ts-standard": {
    "globals": [
      "it",
      "test",
      "expect",
      "describe",
      "beforeEach"
    ]
  }
}
